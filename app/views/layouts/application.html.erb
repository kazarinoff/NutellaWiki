<!DOCTYPE html>
<html>
<head>
  <title>NutellaWiki</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarColor03">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= pages_index_path %>">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_page_path %>">Add a page</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_block_path %>">Add content</a>
      </li>
      <% if (current_user) %>
      <li class="nav-item">
        <a class="nav-link" href="<%= show_user_path(current_user) %>">My Profile</a>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
<div class='container-fluid'>

<%= yield %>
</div>
<footer class='footer navbar-expand-lg navbar-light bg-light'>
  <button href='/logout' type="button" class="btn btn-info my-2 my-sm-0">Logout</button>
</footer>
</body>
</html>
