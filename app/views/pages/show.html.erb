<h1><%= @page.name %></h1>
<h3>(<%= @page.genre %>)</h3>
<p><%= @page.description %><p>
<% @blocks.each do |block| %>
    <div>
        <p><%= link_to block.name, show_block_path(block) %></p>
        <p><%= block.kind %></p>
        <p><%= sanitize block.body %></p>
        <% block.comments.each do |comment| %>
            <div>
                <p><%= comment.user.name %></p>
                <p><%= comment.body %></p>
                <p><%= (comment.created_at).strftime("%m/%d/%Y") %></p>
            </div>
        <% end %>
    </div>
<% end %>

<h3><%= link_to 'Add Content', new_block_path(@page) %></h3>

<% if (@page.user==current_user) %>
<h3><%= link_to 'Edit Page', edit_page_path(@page) %></h3>
<h3><%= link_to 'Delete Page', confirm_delete_page_path(@page) %></h3>
<% end %>

