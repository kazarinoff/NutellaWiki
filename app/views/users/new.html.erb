<h1>Welcome to the NutellaWiki</h1>
<div>
<h1>Register</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |key,value| %>
    <p id="notice"><%= key %> <%= value[0] %></p>  
  <% end %>
<% end %>
<form action = "<%= create_user_path %>" method = "post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
  <label>Name</label>
  <input type = "text" name = "user[name]" id = "user_name">
  <label>Clan</label>
  <select name='user[clan]'>
    <% @clans.each do |clan| %>
    <option value='<%= clan.id %>'><%= clan.name %></option>
    <% end %>
    </select>
  <label>Email</label>
  <input type = "text" name = "user[email]" id = "user_email">
  <label>Password</label>
  <input type = "password" name = "user[password]" id = "user_password">
  <input type = "submit" value = "Register" id='joinbutton'>
</form>
</div>
<div>
<h1>Login</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |key,value| %>
    <p id="notice"><%= key %> <%= value[0] %></p>  
  <% end %>
<% end %>
<% if flash[:passworderror] %>
<p><%= flash[:passworderror] %>
<% end %>
<form action = "<%= new_session_path %>" method = "post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
  <label>Email</label>
  <input type = "text" name = "email" id = "email">
  <label>Password</label>
  <input type = "password" name = "password" id = "password">
  <input type = "submit" value = "Login" name="Login" id='loginbutton'>
</form>
</div>